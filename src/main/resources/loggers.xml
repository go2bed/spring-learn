<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLoggerImpl" class="com.epam.spring.learn.loggers.impl.ConsoleEventLoggerImpl"/>

    <bean id="fileEventLogger" class="com.epam.spring.learn.loggers.impl.FileEventLogger" init-method="init">
        <property name="fileName" value="file.txt"/>
    </bean>


    <bean id="cacheFileEventLogger" class="com.epam.spring.learn.loggers.impl.CacheFileEventLogger" parent="fileEventLogger" destroy-method="destroy">
        <constructor-arg name="cacheSize" value="5"/>
        <constructor-arg name="fileName" value="file.txt"/>
    </bean>

</beans>