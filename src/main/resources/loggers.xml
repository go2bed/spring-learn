<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
      ">

    <context:annotation-config/>

    <bean id="consoleEventLogger" class="com.epam.spring.learn.loggers.impl.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.epam.spring.learn.loggers.impl.FileEventLogger" init-method="init">
        <property name="fileName" value="file.txt"/>
    </bean>


    <bean id="cacheFileEventLogger" class="com.epam.spring.learn.loggers.impl.CacheFileEventLogger" parent="fileEventLogger" destroy-method="destroy">
        <constructor-arg name="cacheSize" value="5"/>
        <constructor-arg name="fileName" value="file.txt"/>
    </bean>

    <bean id="combinedEventLogger" class="com.epam.spring.learn.loggers.impl.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>