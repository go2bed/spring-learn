<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id = "client" class = "com.epam.spring.learn.entities.Client">
        <constructor-arg name = "id" value = "1"/>
        <constructor-arg name = "fullName" value = "John Smith"/>
    </bean>

    <bean id = "consoleEventLoggerImpl" class = "com.epam.spring.learn.loggers.impl.ConsoleEventLoggerImpl"/>

    <bean id = "app" class = "com.epam.spring.learn.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="fileEventLogger"/>
        <constructor-arg ref="event"/>
    </bean>

    <bean id="event" class="com.epam.spring.learn.entities.Event" scope="prototype">
       <constructor-arg>
           <bean class="java.util.Date"/>
       </constructor-arg>
       <constructor-arg>
           <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
       </constructor-arg>
        <property name="message" value="message for John Doe"/>
    </bean>

        <bean id="fileEventLogger" class="com.epam.spring.learn.loggers.impl.FileEventLogger" init-method="init">
            <property name="fileName" value="file.txt"/>
        </bean>

</beans>
